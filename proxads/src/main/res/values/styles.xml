<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AdAttribution">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15.0px</item>
        <item name="android:minHeight">15.0px</item>
        <item name="android:text">Ad</item>
    </style>

    <style name="AppTheme.Ads" parent="Theme.AppCompat.Light">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15.0px</item>
        <item name="android:minHeight">15.0px</item>
        <item name="android:text">Ad</item>
    </style>

    <style name="DefaultButtonAds">
        <item name="backgroundTint">@color/ads_btn_background_tint</item>

        <item name="cornerRadius">@dimen/ads_btn_radius</item>

        <item name="android:textColor">@color/ads_btn_text_color</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingLeft">@dimen/ads_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/ads_btn_padding_right</item>
        <item name="android:paddingTop">@dimen/ads_btn_padding_top</item>
        <item name="android:paddingBottom">@dimen/ads_btn_padding_bottom</item>

        <item name="rippleColor">@color/ads_btn_ripple_color</item>

        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>