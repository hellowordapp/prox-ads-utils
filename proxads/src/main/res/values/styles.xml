<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdAttribution">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15.0px</item>
        <item name="android:minHeight">15.0px</item>
        <item name="android:text">Ad</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/rating_desc</item>
        <item name="colorControlActivated">@color/rating_star</item>
    </style>

    <style name="AppTheme.Ads" parent="Theme.AppCompat.Light">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15.0px</item>
        <item name="android:minHeight">15.0px</item>
        <item name="android:text">Ad</item>
    </style>

    <style name="CustomButton">
        <item name="backgroundTint">@color/backgroundTintAdsButton</item>

        <item name="cornerRadius">@dimen/radiusAdsButton</item>

        <item name="android:textColor">@color/textColorAdsButton</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingLeft">@dimen/paddingLeftAdsButton</item>
        <item name="android:paddingRight">@dimen/paddingRightAdsButton</item>
        <item name="android:paddingTop">@dimen/paddingTopAdsButton</item>
        <item name="android:paddingBottom">@dimen/paddingBottomAdsButton</item>

        <item name="rippleColor">@color/rippleColorAdsButton</item>

        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>