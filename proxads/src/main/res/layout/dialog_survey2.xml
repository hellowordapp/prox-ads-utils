<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="What do you think about the app?"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/chk_option_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question number 1"
        android:textColor="@color/button_text_color_survey"
        android:textSize="14sp"
        app:buttonTint="@color/button_tint_survey" />

    <CheckBox
        android:id="@+id/chk_option_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question number 2"
        android:textColor="@color/button_text_color_survey"
        android:textSize="14sp"
        app:buttonTint="@color/button_tint_survey" />

    <CheckBox
        android:id="@+id/chk_option_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question number 3"
        android:textColor="@color/button_text_color_survey"
        android:textSize="14sp"
        app:buttonTint="@color/button_tint_survey" />

    <CheckBox
        android:id="@+id/chk_option_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question number 4"
        android:textColor="@color/button_text_color_survey"
        android:textSize="14sp"
        app:buttonTint="@color/button_tint_survey" />

    <TextView
        android:id="@+id/txt_question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="8dp"
        android:text="Names of movies you have watched?"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txt_answer_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_text_survey"
        android:fontFamily="@font/roboto_regular"
        android:gravity="start|top"
        android:hint="Please enter your answer here"
        android:minLines="7"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="#8B8B8B"
        android:textSize="12sp" />
</LinearLayout>